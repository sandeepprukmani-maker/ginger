modules = ["python-3.11", "nodejs-20"]
[agent]
expertMode = true
integrations = ["confluence:1.0.0", "jira:1.0.0", "python_openai:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["openssl", "postgresql"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "iDraft Server"

[[workflows.workflow]]
name = "iDraft Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv run python app.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 45889
externalPort = 3002

[[ports]]
localPort = 46051
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]
