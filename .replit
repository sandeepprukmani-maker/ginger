modules = ["nodejs-18", "web", "python-3.11"]
[agent]
expertMode = true
integrations = ["python_openai:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["gitFull", "playwright-driver", "alsa-lib", "at-spi2-atk", "cups", "libdrm", "mesa", "nspr", "nss", "pango", "xorg.libxcb", "xorg.libXcomposite", "xorg.libXdamage", "xorg.libXfixes", "libxkbcommon"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MCP Automation UI"

[[workflows.workflow]]
name = "MCP Automation UI"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python web_ui_mcp.py"
waitForPort = 5000

[[ports]]
