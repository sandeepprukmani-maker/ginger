modules = ["web", "python-3.11", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["freetype", "gitFull", "glibcLocales", "iana-etc", "lcms2", "libev", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "playwright-driver", "tcl", "tk", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn -c config/gunicorn.conf.py visionvault.web.app:app"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 33923
externalPort = 3001

[[ports]]
localPort = 38227
externalPort = 3000

[[ports]]
localPort = 38869
externalPort = 3002

[deployment]
deploymentTarget = "vm"
run = ["gunicorn", "-c", "config/gunicorn.conf.py", "visionvault.web.app:app"]
