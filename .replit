modules = ["python-3.11", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["alsa-lib", "atk", "cups", "freetype", "gitFull", "glibcLocales", "iana-etc", "lcms2", "libdrm", "libev", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "mesa", "nss", "openjpeg", "pango", "playwright-driver", "tcl", "tk", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_server.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 35337
externalPort = 3001

[[ports]]
localPort = 39105
externalPort = 3000

[deployment]
deploymentTarget = "vm"
run = ["python", "run_server.py"]
