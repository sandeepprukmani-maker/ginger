[API_KEYS]
# OpenAI API Key (Required for AI features)
# Get it from: https://platform.openai.com/api-keys
OPENAI_API_KEY = your_openai_api_key_here

# Google Gemini API Key (Optional - for semantic search)
# Get it from: https://ai.google.dev/
GEMINI_API_KEY = your_gemini_api_key_here

[SERVER]
# Server configuration
HOST = 0.0.0.0
PORT = 5000
DEBUG = false

[BROWSER]
# Default browser settings
DEFAULT_BROWSER = chromium
HEADLESS = true
TIMEOUT = 30000

[AUTOMATION]
# Automation engine settings
MAX_RETRIES = 3
ENABLE_TRACING = true
ENABLE_HEALING = true

[DATABASE]
# Database configuration (SQLite by default)
# For PostgreSQL, use: postgresql://user:password@localhost:5432/visionvault
DATABASE_URL = sqlite:///data/database/visionvault.db

[PATHS]
# Directory paths
SCREENSHOTS_DIR = data/uploads/screenshots
LOGS_DIR = data/logs
UPLOADS_DIR = data/uploads

[FEATURES]
# Feature flags
ENABLE_MCP = true
ENABLE_CODE_GEN = true
ENABLE_HYBRID = true
ENABLE_SELF_LEARNING = true
