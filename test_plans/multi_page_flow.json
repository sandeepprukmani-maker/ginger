{
  "id": "test_multi_page",
  "name": "Multi-Page User Flow",
  "description": "Test navigation across multiple pages with form filling",
  "browser": "chrome",
  "headless": false,
  "steps": [
    {
      "action": "navigate",
      "description": "Open GitHub homepage",
      "target": "https://github.com",
      "timeout": 5000
    },
    {
      "action": "snapshot",
      "description": "Capture homepage",
      "timeout": 2000
    },
    {
      "action": "click",
      "description": "Navigate to Pricing page",
      "target": "Pricing",
      "timeout": 3000
    },
    {
      "action": "wait",
      "description": "Wait for page load",
      "timeout": 2000
    },
    {
      "action": "snapshot",
      "description": "Capture pricing page",
      "timeout": 2000
    },
    {
      "action": "click",
      "description": "Navigate to Features",
      "target": "Features",
      "timeout": 3000
    },
    {
      "action": "wait",
      "description": "Wait for page load",
      "timeout": 2000
    },
    {
      "action": "snapshot",
      "description": "Capture features page",
      "timeout": 2000
    }
  ]
}
