{
  "id": "test_001",
  "name": "Google Search Test",
  "description": "Navigate to Google and perform a search",
  "browser": "chrome",
  "headless": false,
  "steps": [
    {
      "action": "navigate",
      "description": "Open Google homepage",
      "target": "https://www.google.com",
      "timeout": 5000
    },
    {
      "action": "snapshot",
      "description": "Capture initial page state",
      "timeout": 2000
    },
    {
      "action": "type",
      "description": "Enter search query",
      "target": "Search",
      "value": "Playwright automation",
      "timeout": 3000
    },
    {
      "action": "click",
      "description": "Click search button",
      "target": "Google Search",
      "timeout": 3000
    },
    {
      "action": "wait",
      "description": "Wait for results to load",
      "timeout": 2000
    },
    {
      "action": "snapshot",
      "description": "Capture search results",
      "timeout": 2000
    }
  ]
}
